---
const { platform, username } = Astro.props;
---

<div class="social-icons">
    <a href={`https://www.${platform}.com/${username}`} target="_blank" title={platform}>
        <i class="fa-brands fa-github"></i>
    </a>
</div>

<style>
    a {
        display: flex;
        padding: 0.5rem 1rem;
        text-decoration: none;
    }

    .social-icons {
        font-size: 32px;
        text-decoration: none;
    }
</style>